<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.titanpay.view.RunPayrollController">
   <children>
      <ComboBox fx:id="cbSelector" layoutX="22.0" layoutY="22.0" prefWidth="150.0" promptText="Run Payroll" visibleRowCount="3" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="10.0" />
      <Label layoutX="14.0" layoutY="53.0" text="Run Payroll for all employees or selected employees" />
      <RadioButton fx:id="rbAll" layoutX="14.0" layoutY="93.0" mnemonicParsing="false" selected="true" text="All Employees" />
      <RadioButton fx:id="rbHourly" layoutX="14.0" layoutY="128.0" mnemonicParsing="false" text="Hourly Employees Only" />
      <RadioButton fx:id="rbSalaried" layoutX="14.0" layoutY="164.0" mnemonicParsing="false" text="Salaried Employees Only" />
      <Label layoutX="33.0" layoutY="210.0" text="Results:" AnchorPane.bottomAnchor="173.0" />
      <Button fx:id="btRun" layoutX="28.0" layoutY="361.0" mnemonicParsing="false" onAction="#runPayroll" prefHeight="25.0" prefWidth="81.0" text="Run" AnchorPane.bottomAnchor="14.0" AnchorPane.leftAnchor="28.0" />
      <Button fx:id="btCancel" layoutX="505.0" layoutY="361.0" mnemonicParsing="false" onAction="#cancel" prefHeight="25.0" prefWidth="81.0" text="Cancel" AnchorPane.bottomAnchor="14.0" AnchorPane.rightAnchor="14.0" />
      <TextArea fx:id="taResults" layoutX="21.0" layoutY="229.0" prefHeight="123.0" prefWidth="559.0" />
      <Button fx:id="btImportEmployees" layoutX="459.0" layoutY="10.0" mnemonicParsing="false" onAction="#importEmployees" prefHeight="25.0" prefWidth="127.0" text="Import Employees" />
   </children>
</AnchorPane>
